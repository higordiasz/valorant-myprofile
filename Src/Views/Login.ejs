<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- ============= Remixicon ============= -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet" />
    <!-- ============= SwiperJS Stylesheet ============= -->
    <link rel="stylesheet" href="../public/css/swiper.css" />
    <!-- ============= CSS Stylesheet ============= -->
    <link rel="stylesheet" href="../public/css/style.css" />

    <!-- ============= SwiperJS ============= -->
    <script src="../public/js/swiper.js"></script>
    <!-- ============= JavaScript ============= -->
    <script src="../public/js/script.js" defer></script>
    <title>Valorant Profile</title>
    <link rel="icon" type="image/x-icon" href="../public/image/icon.png">
</head>

<body>
    <div class="app jett">
        <div class="app__slider swiper">
            <div class="app__slider-wrapper swiper-wrapper">
                <div class="app__slider-slide swiper-slide">
                    <img src="../public/image/Jett.jpg" alt="Jett" />
                </div>
                <div class="app__slider-slide swiper-slide">
                    <img src="../public/image/Neon.jpg" alt="Neon" />
                </div>
                <div class="app__slider-slide swiper-slide">
                    <img src="../public/image/Viper.jpg" alt="Viper" />
                </div>
            </div>
        </div>
        <div class="app__form-wrapper">
            <div class="app__form-container d-flex align-center">
                <!-- ================= Login Form ================= -->
                <form class="form login-form d-flex f-column show" autocomplete="off" action="/login" method="post">
                    <div class="form__header">
                        <p class="form__title">log in account</p>
                        <p class="form__subtitle">welcome back</p>
                    </div>
                    <div class="form__group d-flex f-column r-gap-1">
                        <div class="form__group d-flex f-column r-gap-2">
                            <div class="form__field">
                                <input type="text" class="form__input" placeholder="Enter Email or Username"
                                    autocomplete="off" name="username" />
                                <div class="form__input-border"></div>
                            </div>
                            <div class="form__field">
                                <input type="password" class="form__input" placeholder="Enter Password"
                                    autocomplete="off" name="password" />
                                <div class="form__input-border"></div>
                            </div>
                        </div>
                        <a href="#" class="form__link">forgot password?</a>
                    </div>
                    <div class="form__group d-flex f-column r-gap-2">
                        <button class="form__button filled d-flex align-center justify-center" name="login-btn">
                            <div class="form__button-bg d-flex align-center justify-center">
                                <p>log in</p>
                            </div>
                            <div class="form__button-border"></div>
                        </button>
                        <button class="form__button outlined d-flex align-center justify-center" name="signup-btn"
                            id="signup-form">
                            <div class="form__button-bg d-flex align-center justify-center">
                                <p>sign up</p>
                            </div>
                            <div class="form__button-border"></div>
                        </button>
                    </div>
                </form>

                <!-- ================= Signup Form ================= -->
                <form class="form signup-form d-flex f-column" autocomplete="off">
                    <div class="form__header">
                        <p class="form__title">sign up account</p>
                        <p class="form__subtitle">welcome to valorant profile</p>
                    </div>
                    <div class="form__group d-flex f-column r-gap-1">
                        <div class="form__group d-flex f-column r-gap-2">
                            <div class="form__field">
                                <input id="username" type="text" class="form__input" placeholder="Enter user name"
                                    autocomplete="off" />
                                <div class="form__input-border"></div>
                            </div>
                            <div class="form__field">
                                <input id="email" type="text" class="form__input" placeholder="Enter email"
                                    autocomplete="off" />
                                <div class="form__input-border"></div>
                            </div>
                            <div class="form__field">
                                <input id="password" type="password" class="form__input" placeholder="Enter password"
                                    autocomplete="off" />
                                <div class="form__input-border"></div>
                            </div>
                        </div>
                        <div class="form__group d-flex align-center c-gap-1">
                            <div class="form__check">
                                <input id="check" type="checkbox"
                                    class="form__checkbox d-flex align-center justify-center" id="terms" />
                                <div class="form__checkbox-border"></div>
                            </div>
                            <label for="terms" class="form__label"> I agree the <a href="#" class="form__link">terms &
                                    privacy</a> </label>
                        </div>
                    </div>
                    <div class="form__group d-flex f-column r-gap-2">
                        <button type="button" onclick="singup()"
                            class="form__button filled d-flex align-center justify-center" name="signup-btn">
                            <div class="form__button-bg d-flex align-center justify-center">
                                <p>sign up</p>
                            </div>
                            <div class="form__button-border"></div>
                        </button>
                        <button class="form__button outlined d-flex align-center justify-center" name="login-btn"
                            id="login-form">
                            <div class="form__button-bg d-flex align-center justify-center">
                                <p>log in</p>
                            </div>
                            <div class="form__button-border"></div>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="../Public//Js//signup.js"></script>
</body>

</html>